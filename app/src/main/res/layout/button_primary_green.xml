<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="btnViewModel"
            type="com.gauravtak.scheduler_assignment.viewmodels.ButtonPrimaryGreenVM" />
    </data>
    <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAllCaps="true"
    android:gravity="center"
        android:onClick="@{(v)->btnViewModel.performClick(v)}"
    android:textSize="@dimen/textSizeBtn"
        android:paddingRight="@dimen/paddingBtnRight"
        android:paddingLeft="@dimen/paddingBtnLeft"
        android:text="@{btnViewModel.btnTextValue}"
        android:layout_marginLeft="@dimen/marginBtnLeft"
    android:layout_marginRight="@dimen/marginBtnRight"
    android:textColor="@color/textColorPrimaryGreenBtn"
        android:background="@drawable/bg_btn_primary_green_round"
        android:layout_centerHorizontal="true"
 />
</layout>